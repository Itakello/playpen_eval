    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Run main.py with mmlu",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": [
                "-m",
                "Llama-3.2-1B-Instruct",
                "-b",
                "mmlu"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": false
        },
        {
            "name": "Python: Run main.py with all",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": [
                "-m",
                "Llama-3.2-1B-Instruct",
                "-b",
                "all"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": false
        },
    ]
}